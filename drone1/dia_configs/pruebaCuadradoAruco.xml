<mission name="PruebaCuadradoAruco">
  <task name="Take Off">
    <action name="TAKE_OFF"/>
  </task>

  <task name="hover">
    <action name="HOVER">
      <argument name="duration" value="3"/>
    </action>
  </task>

  <task name="remember point">
    <action name="REMEMBER_POINT">
      <argument name="point_name" value="HOME"/>
    </action>
  </task>

  <task name="moving">
    <behavior name="avoidingObstacles"/>

    <task name="Move 1">
      <action name="GO_TO_POINT">
        <argument name="point" value="(6.0, 4.0, 1.0)"/>
      </action>
    </task>

    <task name="Stabilize">
      <action name="STABILIZE"/>
    </task>

    <task name="Move 2">
      <action name="GO_TO_POINT">
        <argument name="point" value="(6.0, 6.0, 1.0)"/>
      </action>
    </task>

    <task name="Recognizing arucos">
      <behavior name="recognizingArucoMarkers"/>
      <action name="HOVER">
        <argument name="duration" value="3"/>
      </action>
    </task>
  </task>

  <task name="Stabilize">
    <action name="STABILIZE"/>
  </task>

  <task name="Land">
    <action name="LAND"/>
  </task>

  <event_handling>
    <event name="object found">
      <condition parameter="ArucoVisualMarker" comparison="equal" value="0"/>
      <action name="STABILIZE"/> 
      <action name="GO_TO_POINT">
        <argument name="point_name" value="HOME"/>
      </action>
      <action name="STABILIZE"/>
      <ending step="NEXT_TASK"/>
    </event>
  </event_handling>

</mission>